#include <stdio.h>
#include<string.h>
#include<conio.h>
void main()
{
        
        int sifre,no,i,a,b,c,e,f;
        
        a = 800 ;
		do
	{
    	printf("Lutfen, Hesap Numaranızı Giriniz: "); //kart olmadıgı için hesap numarasıyla giris yaptım
        scanf("%d",&no);
	}
		 while(no!=123465)

