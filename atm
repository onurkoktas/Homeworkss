                      	 printf ("\n");
                         printf ("Yapacaginiz islemi seciniz : ");
                         scanf  ("%d",&i);
                         printf ("\n");
                   
				{
                         
                          if(i==1)
                                                printf ("Bakiyeniz : %5.2f\n",a);
                                               
                          if(i==2)
                                                printf ("Yatiracaginiz miktari giriniz : ");
                                                scanf  ("%f", &b);
                                                printf ("Hesabiniza eklenen para : %5.2f\n", b);
                                                printf ("Hesabinizdaki toplam para : %5.2f\n", a+b);
                                                
                          if(i==3)
                                            printf ("Hesabinizdan maximum cekebileceginiz miktar : %5.2f\n", a);
                                                scanf  ("%f", &c);
